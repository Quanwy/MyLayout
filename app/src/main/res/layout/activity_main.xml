<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.newland.layoutdemo.MainActivity">


    <Button
        android:id="@+id/btnLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="MyOnClick"
        android:text="线性布局LinearLayout" />
    <Button
        android:id="@+id/btnRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="MyOnClick"
        android:text="相对布局RelativeLayout" />
    <Button
        android:id="@+id/btnFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="MyOnClick"
        android:text="帧布局FrameLayout" />
    <Button
        android:id="@+id/btnTableLayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="MyOnClick"
        android:text="表格布局TableLayout" />

    <Button
        android:id="@+id/btnAbsoliteLayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="MyOnClick"
        android:text="绝对布局AbsoluteLayout" />

</LinearLayout>
